{
  "name": "echocheck",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@11.3.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @echocheck/web",
    "dev:gateway": "npm run dev -w @echocheck/gateway",
    "dev:functions": "npm run start -w @echocheck/functions",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build --parallel",
    "lint": "turbo run lint --parallel"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  }
}
